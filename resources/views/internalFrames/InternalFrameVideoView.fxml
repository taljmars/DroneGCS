<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.core.internalFrames.InternalFrameVideo">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <HBox prefHeight="0.0" prefWidth="535.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="opCamera" mnemonicParsing="false" onAction="#handleOpCameraOnAction" text="Start Camera" />
                  <ComboBox fx:id="cbDetectorSelect" onAction="#handleDetectorSelectOnAction" prefWidth="150.0" />
               </children>
            </HBox>
         </top>
         <bottom>
            <Label fx:id="redirectionLabel" alignment="CENTER" contentDisplay="CENTER" text="Video Redirection" textAlignment="CENTER" visible="false" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="imageViewer" fitHeight="220.0" fitWidth="535.0" onMouseClicked="#handleVideoMouseClick" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
