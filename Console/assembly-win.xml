<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>win-x64</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>GCDashboard.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>com.dronegcs:Console</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/../addon/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>plugins</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>./src/../addon/scripts/run.bat</source>
            <outputDirectory>.</outputDirectory>
            <destName>run.bat</destName>
        </file>
        <file>
            <source>../ExtLib/OpenCV-3.1.0/Win/opencv-310.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>opencv-310.jar</destName>
        </file>
        <file>
            <source>../ExtLib/OpenCV-3.1.0/Win/native/x64/opencv_java310.dll</source>
            <outputDirectory>native</outputDirectory>
            <destName>opencv_java310.dll</destName>
        </file>
        <file>
            <source>../ExtLib/RXTX/Win64/native/rxtxSerial.dll</source>
            <outputDirectory>native</outputDirectory>
            <destName>rxtxSerial.dll</destName>
        </file>
        <file>
            <source>../ExtLib/RXTX/Win64/RXTXcomm.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>RXTXcomm.jar</destName>
        </file>
    </files>
</assembly>
