<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>linux-x64</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>GCDashboard.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>com.dronegcs:Console</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/../addon/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>plugins</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../ExtLib/OpenCV-3.1.0/Linux32/native/</directory>
            <outputDirectory>native</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>./src/../addon/scripts/run.sh</source>
            <outputDirectory>.</outputDirectory>
            <destName>run.sh</destName>
            <lineEnding>unix</lineEnding>
            <fileMode>700</fileMode>
        </file>
        <file>
            <source>../ExtLib/OpenCV-3.1.0/Linux32/opencv-310.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>opencv-310.jar</destName>
        </file>
        <file>
            <source>../ExtLib/RXTX/Linux64/native/librxtxSerial.so</source>
            <outputDirectory>native</outputDirectory>
            <destName>librxtxSerial.so</destName>
        </file>
        <file>
            <source>../ExtLib/RXTX/Linux64/RXTXcomm.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>RXTXcomm.jar</destName>
        </file>
    </files>
</assembly>
